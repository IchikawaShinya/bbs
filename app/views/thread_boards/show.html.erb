<div class="thread_boards">
	<p id="notice"><%= notice %></p>
	
	<table class="thread_list">
		<thead>
			<tr>
			  <th>スレッド詳細</th>
			</tr>
		</thead>
		<tbody>
			<tr>
		      	<td>
		      		<% unless @thread_board.blank? %>
				        <%= link_to '見る', '/responses/'+@thread_id.to_s %>
				        <%= link_to '編集', edit_thread_board_path(@thread_board) %>
				        <%= link_to '削除', @thread_board, method: :delete, data: { confirm: 'Are you sure?' } %>
		      		<% else %>
		      			<p>削除されたスレッドです</p>
		      		<% end %>
		      		
			    </td>
			</tr>
		</tbody>
	</table>
	
	<div class="new_thread_link">
		<%= link_to '戻る', thread_boards_path %>
	</div>
</div>
