
<h1>Listing Thread Boards</h1>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @thread_boards.each do |thread_board| %>
      <tr>
        <td><%= link_to thread_board[:thread_name], '/responses/'+thread_board[:thread_id].to_s %></td>
        <td><%= link_to 'Edit', edit_thread_board_path(thread_board) %></td>
        <td><%= link_to 'Destroy', thread_board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Thread board', new_thread_board_path %>
