<p id="notice"><%= notice %></p>

<h1>Listing Responses</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @responses.each do |response| %>
      <tr>
        <td><%= link_to t("attributes.show"), response %></td>
        <td><%= link_to t("attributes.edit"), edit_response_path(response) %></td>
        <td><%= link_to t("attributes.delete"), response, method: :delete, data: { confirm: t("attributes.delete_confirm") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
	<hr />
	
	<%= render 'form' %>
	<hr />
</div>
<br>

<div>
	<%= link_to t("attributes.back"), thread_boards_path %>
</div>